<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Log In</title>
      <meta name="theme-color" content="rgb(243, 236, 198)">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
      <style>
         .row{
          min-height:73vh;
      }
      footer{
        color: 1a1a9f;
        font-size: 0.9rem;
      }
        .error{
            color:rgb(151, 78, 78);
        }
        body{
        background-color: rgb(243, 236, 198);
        }
        .card-title{
            font-size : 1.5rem;
        }
        
        p, a{
            font-size: 1rem;
        }
        .card-header{
          color:rgb(107, 92, 7);
        }
      </style>
  </head>
  <body>
    <nav class="navbar bg-light navbar-expand mb-3">
      <div class="container-lg justify-content-start">
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
          <span class="bi bi-list"></span>
        </button>
        <a class="navbar-brand ms-3 ms-md-5 display-1" href="#">
          <img src="/images/logo.png" alt="" style="width:10.5rem" class="">
        </a>
      </div>
    </nav>

    <div class="container-fluid mt-4" justify-content-center>
      <div class="row align-items-center justify-content-center">
        <div class="card col-10 col-sm-6 col-md-6 col-lg-4 px-0">
          <div class="card-header">
            <h5 class="text-center">Log In</h5>
          </div>
          <div class="card-body">
            <form action="/auth/login" novalidate id="login_form">
              <div class="my-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email">
              </div>
              <div class="email error"></div>
              <div class="mb-3">
                  <label for="Password" class="form-label">Password</label>
                  <input type="email" class="form-control" id="password" name="password">
              </div>
              <div class="password error"></div>
              <div class="d-flex align-items-center justify-content-around">
                  <button type="submit" class="btn btn-primary">Log In</button>
                  <a href="/auth/forgot-password" class="text-decoration-none ">Forgot password?</a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

