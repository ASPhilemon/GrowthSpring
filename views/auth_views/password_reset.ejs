    <style>
      .row{
          min-height:73vh;
      }
      .error{
          color:rgb(151, 78, 78);
      }
      body{
      background-color: rgb(243, 236, 198);
      }
      .card-title{
          font-size : 1.5rem;
      }
      
      p, a{
          font-size: 1rem;
      }
      .card-header{
        color:rgb(107, 92, 7);
      }
      footer{
        color: 1a1a9f;
        font-size: 0.9rem;
        position: absolute;
        bottom : 0;
        width: 100%;
      }
  
     
    </style>
