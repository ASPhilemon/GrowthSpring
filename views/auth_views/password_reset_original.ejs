<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password reset</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <style>
        .row{
            min-height:70vh;
        }
        a{
            color: rgb(100, 88, 18);
        }
        .navbar{
            
            box-shadow: inset;
        }
        .navbar-brand{
            font-size: 1.4rem;
            font-weight: 800;
        }
        .error{
            color:rgb(114, 10, 10);
        }
        .login{
            background-color: rgb(100, 88, 18);
            color: white;
        }
        .signup{
            font-size: 1.1rem;
            background-color: rgb(100, 88, 18);
            color : white;
            font-weight: 700;
        }
        .card{
            font-size : 1.3rem;
            color:rgb(100, 88, 18);
            border: 3px solid rgb(100, 88, 18);
            box-shadow: inset;
        }
        .card-title{
            font-size : 1.8rem;
        }

    </style>
</head>
<body>
    <nav class="navbar bg-light">
        <div class="container">
            <div class="navbar-brand">GrowthSpring</div>
            <div><a href="/auth/login" class="btn signup">Log In</a></div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row align-items-center justify-content-center">
            <div class="card col-10 col-sm-6 col-md-4">
                <div class="card-body">
                    <form action="/auth/signup" novalidate id="password_reset_form">
                        <h5 class="card-title text-center">Password Reset</h5>
                        <p>Enter your email. We'll send a password reset link to you</p>
                        <div class="my-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="email error"></div>
                        <div class="mb-3">
                            <label for="password1" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="password1" name="password1">
                        </div>
                        <div class="mb-3">
                            <label for="password2" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="password2" name="password2">
                        </div>
                        <div class="password error"></div>
                        <div class="d-flex">
                            <button type="submit" class="btn px-3 mb-1 login">Reset Password</button>
                        </div>
                    </form>
                    <p>Log in instead <a href="/auth/login" class="text-decoration-none">Log In</a></p>
                </div>
            </div>
        </div>
    </div>
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
    <script src = "/js/passwordReset.js"></script>
</body>
</html>